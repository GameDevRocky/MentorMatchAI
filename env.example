# MentorMatch AI Enhanced - Environment Configuration
# Copy this file to .env and update with your actual credentials

# SMTP Email Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=TRUE

# Database Configuration
DB_PATH=mentormatch_enhanced.sqlite

# Admin Configuration
ADMIN_EMAIL=admin@mentormatch.ai

# Application Configuration
APP_PORT=3851
APP_HOST=127.0.0.1

# Feature Flags
ENABLE_SMTP=FALSE
ENABLE_NOTIFICATIONS=TRUE
ENABLE_ANALYTICS=TRUE
ENABLE_PWA=TRUE

# Security
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=6

